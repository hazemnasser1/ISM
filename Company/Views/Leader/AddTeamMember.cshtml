@using Company.DAL.Models
@model string
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/body.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-md  fixed-top px-xl-5 text-center" id="navbar-example">
        <div class="container-fluid container-xl px-xl-5">
            <a class="navbar-brand text-uppercase fw-bolder ms-4 font-montserrat" href="#">project management</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link lh-sm text-black me-4  fs-14"
                           asp-action="ShowTasks">manage Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link lh-sm text-black me-4 fs-14"
                           aria-current="page"
                           asp-action="ShowTeamMember">show Team Members</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link lh-sm text-black me-4 active fs-14"
                           asp-action="AddTeamMember">add Team Member</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="container d-flex justify-content-center align-items-center vh-100">
            <form class="w-100 mx-auto py-5 form-body bg-color rounded-3 text-center" asp-action="AddTeamMember">
                <h2 class="mt-1">Add Member to Project</h2>
                <div class="mb-3 mt-5 row g-3 align-items-center justify-content-center w-75 m-auto">
                    <div class="col-3">
                        <label for="Project Name" class="fw-semibold">Project Name</label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control mt-2 w-100" id="Project Name" readonly>@Model</textarea>
                    </div>
                </div>
                <div class="mb-4 row g-3 align-items-center justify-content-center  w-75 m-auto">
                    <div class="col-3">
                        <label for="Email" class="fw-semibold">Member Mail</label>
                    </div>
                    <div class="col-9">
                        <input type="text" name="email" class="form-control mt-2 w-100" id="email" placeholder="Enter member Email">
                    </div>
                </div>
                <input type="submit" class="button-56 m-auto"></input>
            </form>
        </div>
    </main>
</body>
</html>