@using Company.PL.ViewModels
@model LogInViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<body>
    <div class="container w-50">
        <h1 class="text-start">Login</h1>
        <form asp-action="LogIn" >
            <div>
                <label for="mail">Email:</label>
                <input id="mail" asp-for="Email" placeholder="Enter Your Email" required>
            </div>
            <div>
                <label for="password">Password:</label>
                <input id="password" asp-for="Password" placeholder="Enter Password" required>
            </div>
			<button type="submit">Submit</button>
            <input type="checkbox" asp-for="RememberMe" id="RememberMe" value="false" />
			<label for="RememberMe">Remember Me?</label>
        </form>
        <div>
            <a asp-action="Register">Register Now!</a>
        </div>
        @if (ViewData["Message"] != null)
        {
            <p>@ViewData["Message"]</p>
        }
    </div>
    <script src="~/js/Login.js"></script>
</body>
</html>

